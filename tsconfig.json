{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2015"],
    "module": "commonjs",
    "target": "ES2019",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["tests-bun/**/*", "programs/**/*"],
  "exclude": ["node_modules", "dist"]
}
