{
  "compilerOptions": {
    "types": [
      "mocha",
      "chai",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "target": "ES2019",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*",
    "tests-bun/**/*",
    "programs/**/*",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "global.d.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
